<h3><%= @cocktail.name%></h3>
<% @doses.each do |dose| %>
<h3> <%= dose.description  %></h3>
<h3> <%= dose.ingredient.name  %></h3>
<%= link_to "Delete a dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to 'Back to the list of cocktails', cocktails_path %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
